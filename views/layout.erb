<html> 
    <head>
<% if false %>
        <link rel="stylesheet/less" type="text/css" href="<%= @prefix %>/lib/bootstrap.less">
        <link rel="stylesheet/less" type="text/css" href="<%= @prefix %>/lib/responsive.less">
        <script src="<%= @prefix %>/js/less-1.1.3.min.js" type="text/javascript"></script>
        <link rel="stylesheet" type="text/css" href="<%= @prefix %>/lib/bootstrap-responsive.css">
<% end %>
        <link rel="stylesheet" type="text/css" href="<%= @prefix %>/lib/bootstrap.min.css">
        <title><%= @dash_title %></title>
        <meta http-equiv="refresh" content="<%= @refresh_rate %>">
    </head>
    <body style="padding-top: 80px;">
        <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <a class="brand" href="<%= @prefix %>/"><%= @dash_title %></a>
                        <ul class="nav">
                        <% @top_level.each_key do |category| %>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= category.capitalize %><b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                <% @top_level[category].dashboards.sort_by{|b| b[:name]}.each do |board| %>
                                    <li><a id="board" name="<%= board[:link] %>" href="<%= [@prefix, category, board[:link]].join('/') %>/"><%= board[:name] %></a></li>
                                <% end %>
                                </ul>
                            </li>
                        <% end %>
                        </ul>
                        <ul class="nav pull-right">
                            <li><a href="<%= @graphite_base %>">Data Browser</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
                <% if @error %>
                <div class="alert-message error">
                    <%= @error %>
                </div>
                <% end %>
                <%= yield %>
        </div>
        <div class="container">
            <h6>Updated <%= Time.now %></h6>
        </div>
        <script src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
        <script src="http://autobahn.tablesorter.com/jquery.tablesorter.min.js"></script>
        <script src="<%= @prefix %>/js/bootstrap.min.js"></script> 
    </body>
</html>
